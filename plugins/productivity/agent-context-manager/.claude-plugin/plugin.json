{
  "name": "agent-context-manager",
  "displayName": "Agent Context Manager",
  "version": "1.0.0",
  "description": "Automatically detects and loads AGENTS.md files to provide agent-specific instructions alongside CLAUDE.md. Enables specialized agent behaviors without manual intervention.",
  "author": "Jeremy Longshore",
  "repository": "https://github.com/jeremylongshore/claude-code-plugins-plus",
  "category": "productivity",
  "tags": ["agents", "context", "automation", "workflow", "productivity"],
  "license": "MIT",
  "claudeCode": {
    "minVersion": "0.1.0"
  },
  "capabilities": {
    "agentSkills": true,
    "slashCommands": true,
    "hooks": true
  },
  "hooks": {
    "onDirectoryChange": "skills/agent-context-loader/scripts/check-agents-md.sh",
    "onSessionStart": "skills/agent-context-loader/scripts/check-agents-md.sh"
  }
}
